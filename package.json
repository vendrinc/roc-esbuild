{
  "name": "roc-esbuild",
  "version": "0.0.23",
  "description": "Load .roc modules from JS or TS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist/*.js", "dist/*.js.map", "dist/*.c", "dist/*.roc", "vendor/glue-platform/*.roc"],
  "scripts": {
    "check": "node clang-tidy.js && clang-format -n src/*.c && tsc --noEmit",
    "format": "clang-format -i src/*.c",
    "build": "esbuild --bundle src/index.ts --outfile=dist/index.js --platform=node --target=node16.16.0 --sourcemap && cp src/*.roc dist/ && cp src/*.c dist/",
    "dev": "ts-node src/index.ts",
    "test": "./test.sh",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run build || echo 'Build skipped'"
  },
  "keywords": [
    "roc",
    "esbuild"
  ],
  "author": "Richard Feldman",
  "license": "UPL-1.0",
  "dependencies": {
    "roc-lang": "0.0.3-2023-09-10-nightly"
  },
  "peerDependencies": {
    "esbuild": "^0.14.39"
  },
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@types/eslint": "8.4.5",
    "@types/node": "^16.11.54",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "ava": "^5.3.0",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsdoc": "39.3.6",
    "eslint-plugin-markdown": "3.0.0",
    "eslint-plugin-mocha": "10.1.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.1",
    "eslint-plugin-tsdoc": "0.2.17",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
