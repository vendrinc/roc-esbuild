{
  "name": "roc-esbuild",
  "version": "1.0.0",
  "description": "Load .roc modules from JS or TS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "check": "tsc --noEmit",
    "build": "esbuild --bundle src/index.ts --outfile=dist/index.js --platform=node --target=node16.16.0 --sourcemap",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run build || echo 'Build skipped'"
  },
  "keywords": [
    "roc",
    "esbuild"
  ],
  "author": "Richard Feldman",
  "license": "UPL-1.0",
  "optionalDependencies": {
    "roc-lang": "^0.0.0-2023-05-31-nightly-modified-linux"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^16.11.54",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "@types/eslint": "8.4.5",
    "eslint-import-resolver-typescript": "3.5.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.0.4",
    "eslint-plugin-jsdoc": "39.3.6",
    "eslint-plugin-markdown": "3.0.0",
    "eslint-plugin-mocha": "10.1.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.1",
    "eslint-plugin-tsdoc": "0.2.17",
    "esbuild": "^0.14.39",
    "eslint": "8.24.0",
    "eslint-config-prettier": "8.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
