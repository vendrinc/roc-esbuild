{
  "name": "roc-esbuild",
  "version": "1.0.0",
  "description": "Load .roc modules from JS or TS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "check": "tsc --noEmit",
    "build": "esbuild --bundle src/index.ts --outfile=dist/index.js --platform=node --target=node16.16.0 --sourcemap",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run build || echo 'Build skipped'"
  },
  "keywords": [
    "roc",
    "esbuild"
  ],
  "author": "Richard Feldman",
  "license": "UPL-1.0",
  "optionalDependencies": {
    "roc-lang": "^0.0.0-2023-05-31-nightly-modified-linux"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "esbuild": "^0.17.19",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
